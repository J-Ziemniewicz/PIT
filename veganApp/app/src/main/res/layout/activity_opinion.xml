<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".OpinionActivity"
        android:orientation="vertical">


    <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:text="Restauracja Ratuszova"
            android:textSize="18sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="Rewelacja, poziom nieosiągalny dla większości restauracji w jakich byłem. Jakość obsługi powala - możesz wpaść na wodę albo najtańszy lunch i zostajesz obsłużony po królewsku - obsługa traktuje każdego klienta z ogromnym szacunkiem. …" />

    <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:text="Matii Sushi"
            android:textSize="18sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="Bardzo smaczne i stosunkowo tanie sushi. Duży wybór azjatyckiego jedzenia oraz ciekawostek kulinarnych. Bogaty wybór herbat wraz z całą ceremonią jej samodzielnego parzenia. Wystrój lokalu elegancki, obsługa profesjonalna i dobrze …" />
</LinearLayout>